<div class="container sign-up-page">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <img class="logo" src="https://dl.dropboxusercontent.com/u/2330299/capstone/logo.png" width="274px">

      <form action="<%= session_url %>" method="post" class="form-group">
        <input type="hidden"
               name="authenticity_token"
               value="<%= form_authenticity_token %>">

        <input class="form-control"
               type="text" id="user-email"
               name="user[email]"
               value="<%= @user.email %>"
               placeholder="Email">

        <input class="form-control"
               type="password" id="user-password"
               name="user[password]"
               placeholder="Password">

        <input class="btn btn-primary login-user" type="submit" value="Login">
      </form>


    </div>
  </div>
</div>
